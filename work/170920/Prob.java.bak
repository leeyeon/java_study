public class Prob 
{
	public void calc(int[] ix) {
		int[] arr = ix;
		int oddSum = 0; // È¦¼ö ÇÕ
		int evenSum = 0; // Â¦¼ö ÇÕ

		for ( int i = 0; i < ix.length; i++ ) {
			if ( ix[i] % 2 == 0) {
				evenSum += ix[i];
			} else {
				oddSum += ix[i];
			}
		} // end of for

		System.out.println("È¦¼öÀÇ ÇÕ : "+oddSum);
		System.out.println("Â¦¼öÀÇ ÇÕ : "+evenSum);

	} // end of calc method

	public static void main(String[] args) 
	{

