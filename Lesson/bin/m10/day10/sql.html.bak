1. DDL :: CREATE : TABLE 생성
///////////////////////////////////////////////


CREATE TABE emp_test (
 id NUMBER(3),
 name VARCHAR2(15),
 salary NUMBER(7,2),
 title VARCHAR2(15) default '사원',
 in_date date default sysdate,
 dept_name VARCHAR2(15)
);

///////////////////////////////////////////////
2. 테이블 생성 확인 / Table Record 조회 (DESCRIBE / SELECT)

DESC emp_test;

DESCRIBE emp_test;

SELECT * FROM emp_test;

