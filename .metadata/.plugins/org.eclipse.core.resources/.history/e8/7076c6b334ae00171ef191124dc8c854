package m10.day12;

import java.io.BufferedReader;
import java.io.FileReader;
import java.util.Vector;

public class FileUtil {
	public static Vector<User> user = new Vector<User>();
	
	public static void fileToPrint(String fileName) throws Exception {
		
		BufferedReader br = null;
		br = new BufferedReader(new FileReader(fileName));
		
		String source = "";
		while ((source = br.readLine()) != null) {
			String[] pasing = source.split("/");
			boolean male = true; //³²ÀÚ
			
			user.add(new User(pasing[0],pasing[1],pasing[2],male));
			System.out.println(":: " + source);
			
		}		
		
		br.close();
	}
	
	public static Vector<User> fileFindAddress(String fileName, String address) throws Exception {
		
		FileUtil.fileToPrint(fileName);
		
		return null;
	}
}
